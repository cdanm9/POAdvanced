<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"
xmlns:upload="sap.m.upload" >   
    <VBox core:require="{handler: 'pocreate/custom/fragment/FileUpload'}" >      
    <upload:UploadSet      
            id="uploadSet"
            instantUpload="false"
            uploadEnabled="true"
            afterItemAdded="handler.onAfterItemAdded"
            uploadCompleted="handler.onUploadCompleted"		      			
            items="{
                        path: '/Purchase_Attachment',
                        parameters: {
                            $orderby: 'createdAt desc'
                        },
                        templateShareable: false}"
        >
            <upload:toolbar>
            </upload:toolbar>
            <upload:items>
                <upload:UploadSetItem
                    fileName="{fileName}"
                    mediaType="{mediaType}"
                    url="{url}"
                    enabledEdit="false"
                    visibleEdit="false"
                    openPressed="handler.onOpenPressed"
                >
                    <upload:attributes>
                        <ObjectAttribute
                            title="Uploaded By"
                            text="{createdBy}"
                            active="false"
                        />
                        <ObjectAttribute
                            title="Uploaded on"
                            text="{createdAt}"
                            active="false"
                        />
                        <ObjectAttribute
                            title="File Size"
                            text="{size}"
                            active="false"
                        />
                    </upload:attributes>
                </upload:UploadSetItem>
            </upload:items>
        </upload:UploadSet>
        </VBox>
</core:FragmentDefinition>