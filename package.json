{
  "name": "poadvanced",
  "version": "1.0.0",
  "description": "Purchase Order",
  "repository": "poadvanced",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.7",
    "@cap-js/graphql": "^0.14.0",
    "@cap-js/hana": "^2",
    "@cap-js/postgres": "^2.0.6",
    "@cap-js/sqlite": "^2.0.4",
    "@sap-cloud-sdk/connectivity": "^4.2.0",
    "@sap-cloud-sdk/http-client": "^4.2.0",
    "@sap-cloud-sdk/resilience": "^4.2.0",
    "@sap/cds": "^9.4.4",
    "@sap/xssec": "^4.11.2",
    "cds-swagger-ui-express": "^0.10.0",
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@sap/cds-dk": "^9.4.3",
    "@sap/hdi-deploy": "^5.5.1",
    "@sap/ux-specification": "^1.139.0",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^6.1.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-hybrid": "cds watch --profile hybrid",
    "watch-hybrid-bindings": "cds watch --profile hybrid --resolve-bindings",
    "watch-apps": "cds bind --exec -- npm start --prefix app/router",
    "undeploy": "cf undeploy poadvanced --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "build-deploy": "mbt build && cf deploy mta_archives/poadvanced_1.0.0.mtar",
    "watch-pocreation": "cds watch --open com.sap.pocreation/index.html?sap-ui-xx-viewCache=false --livereload false",
    "test": "node --test",
    "test-cap": "node --test test/*.test.js"
  },
  "cds": {
    "server": {
      "index": true
    },
    "fiori": {
      "bypass_draft": true,
      "preview": true
    },
    "messaging": {
      "kind": "enterprise-messaging"
    },
    "requires": {
      "db": "hana",
      "destinations": true,
      "[sqlite]": {
        "db": {
          "kind": "sqlite",
          "impl": "@cap-js/sqlite",
          "credentials": {
            "url": "db.sqlite"
          },
          "schema_evolution": "auto"
        },
        "db-ext": {
          "model": "db/sqlite"
        }
      },
      "[pg]": {
        "db": {
          "kind": "postgres",
          "dialect": "postgres",
          "impl": "@cap-js/postgres",
          "schema_evolution": "auto",
          "credentials": {
            "host": "localhost",
            "port": 5432,
            "user": "postgres",
            "password": "postgres",
            "database": "poadvanced"
          }
        },
        "db-ext": {
          "model": "db/postgres"
        }
      },
      "[development]": {
        "db": "sqlite",
        "auth": "mocked"
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "kymacap": {
        "kind": "odata",
        "model": "srv/external/kymacap",
        "credentials": {
          "destination": "KymaCAP",
          "path": "/odata/v4/catalog"
        }
      }
    }
  }
}