{
  "name": "POAdvanced",
  "version": "1.0.0",
  "description": "Purchase Order",
  "repository": "PurchaseOrderAdvanced",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.7",
    "@cap-js/graphql": "^0.14.0",
    "@cap-js/hana": "^2.3.4",
    "@cap-js/postgres": "^2.0.6",
    "@cap-js/sqlite": "^2.0.4",
    "@sap/cds": "^9.4.4",
    "cds-swagger-ui-express": "^0.10.0"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^5.5.1",
    "@sap/ux-specification": "^1.139.0",
    "rimraf": "^6.1.0",
    "cds-plugin-ui5": "^0.13.0",
    "@sap/cds-dk": "^9.4.3",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-hybrid": "cds watch --profile hybrid",
    "watch-apps": "cds bind --exec -- npm start --prefix app/router",
    "undeploy": "cf undeploy POAdvanced --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "build-deploy": "mbt build && cf deploy mta_archives/POAdvanced_1.0.0.mtar",
    "watch-pocreation": "cds watch --open com.sap.pocreation/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "server": {
      "index": true
    },
    "fiori": {
      "bypass_draft": true,
      "preview": true
    },
    "messaging":{
      "kind":"enterprise-messaging"
    },
    "requires": {
      "db": "hana",
      "auth": "xsuaa",
      "destinations": true,
      "connectivity": true,
      "[sqlite]": {
        "db": {
          "kind": "sqlite",
          "impl": "@cap-js/sqlite",
          "credentials": {
            "url": "db.sqlite"
          },
          "schema_evolution": "auto"
        },
        "db-ext": {
          "model": "db/sqlite"
        }
      },
      "[pg]": {
        "db": {
          "kind": "postgres",
          "dialect": "postgres",
          "impl": "@cap-js/postgres",
          "schema_evolution": "auto",
          "credentials": {
            "host": "localhost",
            "port": 5432,
            "user": "postgres",
            "password": "postgres",
            "database": "POAdvanced"
          }
        },
        "db-ext": {
          "model": "db/postgres"
        }
      }
    }
  },
  "sapux": [
    "app/pocreation"
  ],
  "workspaces": [
    "app/*",
    "app/pocreation"
  ]
}
